{
  "name": "GIFPlayer",
  "description": "Get ready to take GIF technology into the next century!",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "webRequest",
    "storage",
    "<all_urls>"
  ],
  "content_scripts" : [
    {
      "matches" : [
        "<all_urls>"
      ],
      "js" : [
        "js/contentscript.js"
      ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "page_action": {
      "default_name": "GIFPlayer",
      "default_title" : "There's a GIF on this page!"
      // "default_icon": "marker.png"
  }
}
